<% var user %>
<div
  class="tab-pane fade active show"
  id="profile"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <form action="/dashboard/updatePatient" method="POST" class="w-75">
    <div class="form-group">
      <div class="row">
        <div class="col-11">
          <label for="user_key">User Key</label>
          <input
            type="text"
            name="user_key"
            id="user_key"
            class="form-control"
            value="<%= user.user_key %>"
            placeholder="{User Key}"
            readonly
          />
          <div class="alert alert-warning">
            <strong>Warning:</strong> Do not share the
            <strong>User Key</strong> with anyone inside or outside the network!
          </div>
        </div>
        <div class="col-1">
          <%- include('../qr-code') %>
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <div class="row">
        <div class="col-11">
          <label for="PID">PID</label>
          <input
            type="text"
            name="PID"
            id="PID"
            class="form-control"
            value="<%= user.PID %>"
            placeholder="{PID}"
            readonly
          />
          <div class="alert alert-warning">
            <strong>Warning:</strong> Share it with only whom you trust!
          </div>
        </div>
        <div class="col-1">
          <%- include('../qr-code2') %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input
        class="form-control"
        type="email"
        value="<%= user.email %>"
        id="email"
        name="email"
      />
    </div>

    <div class="form-group">
      <label for="dob">DOB</label>
      <input
        class="form-control"
        type="text"
        value="<%= user.dob.toLocaleDateString('en-US') %>"
        id="dob"
        disabled
      />
    </div>

    <div class="form-group">
      <label>Gender</label>
      <input
        type="text"
        name="gender"
        id="gender"
        class="form-control"
        value="<%= user.gender %>"
        disabled
      />
    </div>

    <div class="form-group">
      <label>Age</label>
      <input
        type="text"
        name="age"
        id="gender"
        class="form-control"
        value="<%= Math.floor((Date.now() - user.dob) / (31557600000)) %>"
        disabled
      />
    </div>

    <!--Patient-->
    <% if (!user.isPhysician) { %>
    <div class="form-group">
      <label>Effort</label>
      <div class="custom-control custom-radio">
        <input
          type="radio"
          class="custom-control-input"
          id="low-effort-radio"
          name="effort"
          value="Low"
          required
        />
        <label class="custom-control-label" for="low-effort-radio"
          >Low (I hardly do any activity on a daily basis)</label
        >
      </div>
      <div class="custom-control custom-radio">
        <input
          type="radio"
          class="custom-control-input"
          id="med-effort-radio"
          name="effort"
          value="Med"
          required
        />
        <label class="custom-control-label" for="med-effort-radio"
          >Med (I often do effort on a daily basis including at my work)</label
        >
      </div>
      <div class="custom-control custom-radio">
        <input
          type="radio"
          class="custom-control-input"
          id="high-effort-radio"
          name="effort"
          value="High"
          required
        />
        <label class="custom-control-label" for="high-effort-radio"
          >High (I do high effort daily / I am an active worker)</label
        >
      </div>
    </div>
    <% } %>

    <!--Physician-->
    <% if (user.isPhysician) { %>
    <div class="form-group">
      <label>Speciality</label>
      <input
        type="text"
        name="speciality"
        id="speciality"
        class="form-control"
        value="<%= user.speciality %>"
        disabled
      />
    </div>

    <div class="form-group">
      <label>Employed Since</label>
      <input
        type="text"
        name="employed_since"
        id="employed-since"
        class="form-control"
        value="<%= user.employedSince.toLocaleDateString('en-US') %>"
        disabled
      />
    </div>
    <% } %>
    <br />
    <% if (!user.isPhysician) { %>
    <input type="submit" value="Save" class="btn btn-outline-info" />
    <% } %> 
  </form>
</div>

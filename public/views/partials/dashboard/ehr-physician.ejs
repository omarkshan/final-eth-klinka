<div class="tab-pane fade" id="EHRs" role="tabpanel" aria-labelledby="EHRs-tab">
  <div class="card">
    <div class="card-header" id="headingTwo">
      <h2 class="mb-0">
        <button
          class="btn btn-link btn-block text-left collapsed"
          type="button"
          data-toggle="collapse"
          data-target="#collapseTwo"
          aria-expanded="false"
          aria-controls="collapseTwo"
        >
          Patient: <strong>{Patient PID}</strong>
        </button>
      </h2>
    </div>
    <div
      id="collapseTwo"
      class="collapse"
      aria-labelledby="headingTwo"
      data-parent="#accordionExample"
    >
      <div class="card-body">
        <strong>Age:</strong> {Age}
        <br />
        <strong>Gender:</strong> {Gender}
        <br />
        <br />
        <% var _id = 'xxxxx-xxxxx-xxxxx-xxxxxxxxxxxxxx' %> <% var _record =
        'xxxxx-xxxxx-xxxxx-xxxxxxxxxxxxxx' %>
        <button
          class="btn btn-outline-info"
          onclick="createRecord('<%=_id%>', '<%=_record%>')"
        >
          Add Record
        </button>
        <button class="btn btn-outline-danger">Remove Patient</button>
        <br />
        <br />
        <div class="alert alert-danger">
          <strong
            >ALERT: Records can not be altered once added!
            <br />
            Make sure format and data entered are both correct!
          </strong>
        </div>
      </div>
    </div>
  </div>
</div>

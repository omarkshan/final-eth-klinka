<%- include('./partials/header') %>
<br />
<div class="container">
  <h3>Login</h3>
  <hr />
  <%- include('./partials/messages') %>
  <form action="/auth/login" method="POST" class="w-50">
    <div class="form-group">
      <label for="user_key">User Key</label>
      <div class="row">
        <div class="col-9">
          <input
            type="text"
            name="user_key"
            id="user_key"
            class="form-control"
            placeholder="User Key"
          />
        </div>
        <div class="col-1">
          <div
            class="btn btn-outline-dark"
            title="Read QR code Key"
            data-toggle="modal"
            data-target="#QRModal"
            onclick="start()"
          >
            <i class="fa fa-qrcode" aria-hidden="true"></i>
          </div>
        </div>
        <div
          class="modal fade"
          id="QRModal"
          tabindex="-1"
          role="dialog"
          aria-labelledby="QRModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="QRModalLabel">QR Code</h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                  onclick="stop()"
                  id="closeReader"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <video src="" id="preview" style="width: 30em;"></video>
                <br />
                <div class="alert alert-info">
                  <strong><i class="fas fa-info-circle"></i> Info:</strong>
                  <br />
                  Make Sure the QR code is visible
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
        placeholder="Password"
      />
    </div>
    <input type="submit" value="Login" class="btn btn-primary" />
  </form>
  <br />
  <div class="alert alert-warning">
    <strong><i class="fas fa-exclamation-triangle"></i> Warning:</strong> Do not
    share the <strong>User Key</strong> with anyone inside or outside the
    network!
  </div>
</div>
<%- include('./partials/footer') %>

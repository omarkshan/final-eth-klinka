                          <label for="patient-id">Patient PID</label>
                          <br />
                          <input
                            type="text"
                            name="patient-id"
                            id="patient-id"
                            placeholder="Patient PID"
                          />
                          <br /><br />
                          <input
                            type="submit"
                            value="Send Request"
                            class="btn btn-outline-info"

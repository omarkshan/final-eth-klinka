                            <input
                              type="text"
                              name="patient-id"
                              id="patient-id"
                              placeholder="Patient PID"
                            />
                          </div>
                          <br /><br />
                          <input
                            type="submit"
                            value="Send Data"
                            class="btn btn-outline-info"
                          />
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
